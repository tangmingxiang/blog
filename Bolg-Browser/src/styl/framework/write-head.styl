+prefix-classes('blog-')
  .head
    .write--head 
      display grid
      grid-template-columns 1fr 1fr 1fr
      grid-template-rows 60px
      margin: 0 auto
      padding: 10px 0
      width: 1060px
      height 60px
      box-sizing: border-box
      justify-content space-between
      align-content center
    .write--logo 
      justify-self left
      a:hover
        background-color: transparent
      img
        height: 60px
        width: auto
        vertical-align: middle
        border-radius 50%
    .write--title
      justify-self center
      font-size 20px
      color: #6C757D
      line-height 60px
    .write--submit
      position relative
      justify-self right
      // line-height 60px
      padding-top 10px
      a
        display: block
        padding: 10px
        width fit-content
        line-height 20px
        font-size 16px
        color: #fff
        border-radius: 4px
        background-color: #00965E
      .submit--form
        display: none
        position: absolute
        top: calc(100% - 10px)
        right: 0px
        padding: 20px
        width: 300px
        border-radius: 4px
        z-index 999
        border: 1px solid #C6C9CB
        background-color #fff
        .form--cover
          position relative
          height: 120px
          font-size 16px
          color: #AD887D
          background-color #E9ECEF
          overflow hidden
          .cover--show
            img
              width: 100%
              height: 100%
            p
              padding: 5px 10px
              line-height 20px 
          .cover--tip,
          .cover--delete
            position: absolute
            right 10px
            bottom 10px
            padding: 0 5px
            height: 30px
            line-height 30px
            color: #fff
            cursor pointer
            background-color #1C2024
            transition: .5s
          .cover--delete
            display: none
          .cover--tip.cover--add
            right: 60px
        .submit--confirm
          margin-top: 20px 
          text-align center
          font-size 20px  
          color: #fff
          line-height 30px
          border-radius: 4px
          cursor: pointer
          background-color: #00965E
  @media screen and (max-width 1060px)
    .head
      .write--head 
        width: 760px